/*
 * ==========================================================
 * LangGraph BioFlow - Nextflow Configuration
 * Docker completely disabled
 * ==========================================================
 */

params {
    reads        = "data/fastq/*_{R1,R2}_001.fastq.gz"
    reference    = "data/reference/genome.fa"
    output_dir   = "results"

    max_cpus     = 8
    max_memory   = '16 GB'
}

process {
    executor = 'local'
    cpus     = { task.cpus ?: 4 }
    memory   = { task.memory ?: '8 GB' }
    time     = '4h'

    errorStrategy = 'retry'
    maxRetries    = 2

    // IMPORTANT: No container usage
    container     = ''
}

docker {
    enabled = false
}

singularity {
    enabled = false
}

profiles {
    standard {
        process.executor = 'local'
        docker.enabled   = false
        singularity.enabled = false
    }

    dgx_gpu {
        process.executor = 'local'
        docker.enabled   = false
        singularity.enabled = false
    }
}

workDir  = "./work"

timeline.enabled     = true
timeline.overwrite   = true
trace.enabled        = true
report.enabled       = true
report.overwrite     = true
dag.enabled          = true
